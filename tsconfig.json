{
    "compilerOptions": {
      "target": "es3",
      "module": "es6",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "outDir": "dist",
      "rootDirs": ["src", "test"],
      "esModuleInterop": true
    },
    "include": ["src/**/*", "test/**/*"],
}